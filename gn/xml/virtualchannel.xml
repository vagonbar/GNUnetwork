<block>
	<name>Virtual Channel</name>
	<key>virtualchannel</key>
     <category>Interfaces</category>
	<import>import libvirtualchannel.gwnVirtualChannel as channel</import>
	<make>channel.gwnVirtualChannel($frame_loss)</make>
	<callback>start()</callback>
	<callback>stop()</callback>
	<param>
		<name>Frame Loss Probability</name>
		<key>frame_loss</key>
		<value>0.01</value>
		<type>real</type>
     </param>      

	<sink>
		<name>in</name>
		<type>Event</type>            
	</sink>
     	<source>
		<name>out</name>
		<type>Event</type>
	</source>

